generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// OTP table for email verification
model Otp {
  id        String   @id @default(cuid())
  email     String
  otp       String
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@map("otp")
}

// Candidate info table
model CandidateInfo {
  id               String   @id @default(cuid())
  firstName        String
  lastName         String
  email            String   @unique
  password         String   // Removed @unique constraint
  age              Int?
  currentRole      String?
  totalExperience  String?
  location         String?
  expectedCTC      String?
  skills           String?   // JSON array
  portfolioLink    String?
  githubLink       String?
  linkedinLink     String?
  twitterLink      String?
  resume           String?   // File path/URL
  readyToRelocate  Boolean?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("candidate_info")
}

// HR info table
model HrInfo {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  scope       String   // Scope within organization
  email       String   @unique
  password    String   // Hashed password
  phoneNo     String?
  designation String   // Job designation
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relationship: HR can post multiple jobs
  jobs        Jobs[]

  @@map("hr_info")
}

// Jobs table - NEW MODEL TO ADD
model Jobs {
  jobId          Int       @id @default(autoincrement())
  role           String
  designation    String
  jobStatus      JobStatus @default(ACTIVE)
  experience     Experience
  department     Department
  location       Location
  jobDescription String    @db.Text
  postedOn       DateTime  @default(now())
  hrId           String    // Foreign key to HrInfo
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  // Relationship: Each job belongs to one HR
  hr             HrInfo    @relation(fields: [hrId], references: [id])
  
  // Indexes for better performance
  @@index([jobStatus])
  @@index([department])
  @@index([location])
  @@index([experience])
  @@index([postedOn])
  @@map("jobs")
}

// Enums for Jobs
enum JobStatus {
  ACTIVE
  INACTIVE
}

enum Experience {
  LESS_THAN_2    // < 2 years = 1
  TWO_TO_FIVE    // 2-5 years = 2
  FIVE_TO_EIGHT  // 5-8 years = 3
  EIGHT_TO_TWELVE // 8-12 years = 4
  MORE_THAN_12   // 12+ years = 5
}

enum Department {
  ENGINEERING
  MARKETING
  QA
  DEVOPS
  PRODUCT_MANAGER
}

enum Location {
  MUMBAI
  BHUBANESWAR
  DELHI
  BANGALORE
  HYDERABAD
}